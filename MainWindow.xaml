<Window x:Class="PASSWORD_BUTTON_IN_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PASSWORD_BUTTON_IN_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="434.031">
    <Grid>
        <StackPanel Margin="10">
            <Label FontSize="24">EMAIL:</Label>
            <TextBox FontSize="24"></TextBox>
            <Label FontSize="24">PASSWORD:</Label>
            <PasswordBox FontSize="25" MaxLength="6" PasswordChar="*"></PasswordBox>
        </StackPanel>
    </Grid>
</Window>
